#!/bin/bash

cmd="$*"

if [[ "$1" == "omarchy-webapp-install" ]]; then
  presentation_part="omarchy-show-webapp-logo"
else
  presentation_part="omarchy-show-logo"
fi

exec setsid uwsm app -- $TERMINAL --app-id=org.omarchy.terminal --title=Omarchy -e bash -c "$presentation_part; $cmd; omarchy-show-done"
